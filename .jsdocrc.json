{
    "plugins": ["plugins/markdown"],
    "opts": {
        "template": "node_modules/minami",
        "destination": "./docs",
        "readme": "./README.md",
        "encoding": "utf8",
        "recurse": true
    },

    "source": {
        "exclude": ["lib/intro.js", "lib/outro.js"]
    },
    "linenums": true,

    "templates": {
        "useLongnameInNav": false,
        "showInheritedInNav": true
    }

}
